<head>
<link rel="stylesheet" href="/static/circular-slider.min.css" />
<script src="/static/jquery.js"></script>
<script src="/static/circular-slider.min.js"></script>
<style type="text/css">
.jcs-panel {
    background-color: #6886C0;
}

.jcs {
    background-color: #6886C0;
    border-color: #fff;
}

.jcs-value {
    background-color: #6886C0;
    border-color: #fff;
}

.jcs-indicator {
    background-color: #6886C0;
    border-color: #fff;
}
</style>
</head>
<body>

<div id="slider">
<script>$(document).ready(function(){

var send_ok = True;

var handleSlide = function(ui, value) {
    if (value < 70) {
        value = 70;
        //Can't set the slider value from inside this closure
    }

    if (value > 180) {
        value = 180;
    }

    if (send_ok == true) {
    send_ok = false;
    $.ajax({
        url: "/position/" + value,
    }).done(function() {
        send_ok = true;
    });
    }
}

var slider = $('#slider').CircularSlider({
    shape: "Half Circle",
    slide: handleSlide,
    min: 0,
    max: 180,
});

});</script>
</div>
</body>
</html>
